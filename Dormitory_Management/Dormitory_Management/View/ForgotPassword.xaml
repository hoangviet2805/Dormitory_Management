<Window x:Class="Dormitory_Management.View.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f2f5">
        <Border Background="White" CornerRadius="15" Padding="30" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel x:Name="MainStackPanel">
                <TextBlock Text="Password Recovery" FontSize="22" FontWeight="Bold" Foreground="#1a73e8" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- Enter email -->
                <TextBlock Text="Enter Registered Email" Foreground="#5f6368" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,15" Height="35" BorderBrush="#dadce0" BorderThickness="1" Padding="10,5"/>

                <Border Background="#1a73e8" CornerRadius="5" Width="120" Height="35" HorizontalAlignment="Center">
                    <Button Content="Send OTP" Width="120" Height="35" Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="SemiBold" Click="SendOtpButton_Click"/>
                </Border>

                <!-- Error display -->
                <TextBlock x:Name="ErrorText" Foreground="#d93025" Margin="0,15,0,0" TextWrapping="Wrap" HorizontalAlignment="Center"/>

                <!-- OTP and password reset part, hidden by default -->
                <StackPanel x:Name="ResetSection" Visibility="Collapsed" Margin="0,20,0,0">
                    <TextBlock Text="Enter OTP" Foreground="#5f6368" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="OtpTextBox" Margin="0,5,0,15" Height="35" BorderBrush="#dadce0" BorderThickness="1" Padding="10,5"/>

                    <TextBlock Text="New Password" Foreground="#5f6368" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,15" Height="35" BorderBrush="#dadce0" BorderThickness="1" Padding="10,5"/>

                    <TextBlock Text="Confirm Password" Foreground="#5f6368" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,15" Height="35" BorderBrush="#dadce0" BorderThickness="1" Padding="10,5"/>

                    <Border Background="#28a745" CornerRadius="5" Width="120" Height="35" HorizontalAlignment="Center">
                        <Button Content="Reset Password" Width="120" Height="35" Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="SemiBold" Click="ResetPasswordButton_Click"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
