<Window x:Class="Dormitory_Management.View.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quên mật khẩu" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <Border Background="White" CornerRadius="10" Padding="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel x:Name="MainStackPanel">
                <TextBlock Text="Khôi phục mật khẩu" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Nhập email -->
                <TextBlock Text="Nhập email đã đăng ký" />
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" Height="30"/>

                <Button Content="Gửi mã OTP" Width="120" Height="30" HorizontalAlignment="Center" Click="SendOtpButton_Click"/>

                <!-- Hiển thị lỗi -->
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap" />

                <!-- Phần OTP và đổi mật khẩu, mặc định ẩn -->
                <StackPanel x:Name="ResetSection" Visibility="Collapsed" Margin="0,20,0,0">
                    <TextBlock Text="Nhập mã OTP" />
                    <TextBox x:Name="OtpTextBox" Margin="0,5,0,10" Height="30"/>

                    <TextBlock Text="Mật khẩu mới" />
                    <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,10" Height="30"/>

                    <TextBlock Text="Xác nhận mật khẩu" />
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,10" Height="30"/>

                    <Button Content="Đổi mật khẩu" Width="120" Height="30" HorizontalAlignment="Center" Click="ResetPasswordButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
