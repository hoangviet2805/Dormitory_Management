<Window x:Class="Dormitory_Management.View.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <Border Background="White" CornerRadius="10" Padding="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel x:Name="MainStackPanel">
                <TextBlock Text="Password Recovery" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Enter email -->
                <TextBlock Text="Enter Registered Email" />
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" Height="30"/>

                <Button Content="Send OTP" Width="120" Height="30" HorizontalAlignment="Center" Click="SendOtpButton_Click"/>

                <!-- Error display -->
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap" />

                <!-- OTP and password reset part, hidden by default -->
                <StackPanel x:Name="ResetSection" Visibility="Collapsed" Margin="0,20,0,0">
                    <TextBlock Text="Enter OTP" />
                    <TextBox x:Name="OtpTextBox" Margin="0,5,0,10" Height="30"/>

                    <TextBlock Text="New Password" />
                    <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,10" Height="30"/>

                    <TextBlock Text="Confirm Password" />
                    <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,10" Height="30"/>

                    <Button Content="Reset Password" Width="120" Height="30" HorizontalAlignment="Center" Click="ResetPasswordButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
