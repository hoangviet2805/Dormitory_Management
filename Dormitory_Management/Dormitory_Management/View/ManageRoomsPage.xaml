<Page x:Class="Dormitory_Management.View.ManageRoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dormitory_Management.View"
      mc:Ignorable="d" 
      Title="ManageRoomsPage" Height="750" Width="1030" >

    <Grid Background="#f0f0f0">
        <!-- Add Room -->
        <Border Background="White" CornerRadius="10" Padding="20" Width="750" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20">
            <StackPanel>
                <!-- Add Room Title -->
                <TextBlock Text="ADD ROOM" FontSize="18" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Room Number -->
                <TextBlock Text="Room Number"/>
                <TextBox x:Name="RoomNumberTextBox" Margin="0,5,0,10" Height="30"/>

                <!-- Activate Room -->
                <CheckBox x:Name="ActivateRoomCheckBox" Content="Activate" Margin="0,5,0,10" />

                <!-- Add Room Button -->
                <Button Content="Add Room" Width="120" HorizontalAlignment="Center" Click="AddRoom_Click" Margin="0,10,0,20"/>

                <!-- Update or Delete Room -->
                <TextBlock Text="UPDATE OR DELETE ROOM" FontSize="18" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Search Room -->
                <TextBlock Text="Room Number"/>
                <TextBox x:Name="SearchRoomNumberTextBox" Margin="0,5,0,10" Height="30"/>

                <Button Content="Search" Width="120" HorizontalAlignment="Center" Click="SearchRoom_Click" Margin="0,10,0,20"/>

                <!-- Activate or Deactivate Room -->
                <CheckBox x:Name="UpdateActivateRoomCheckBox" Content="Activate Room" Margin="0,5,0,10" />
                <CheckBox x:Name="DeactivateRoomCheckBox" Content="Deactivate Room" Margin="0,5,0,10" />

                <!-- Update and Delete Buttons -->
                <Button Content="Update" Width="120" HorizontalAlignment="Center" Click="UpdateRoom_Click" Margin="0,10,0,20"/>
                <Button Content="Delete" Width="120" HorizontalAlignment="Center" Click="DeleteRoom_Click" Margin="0,10,0,20"/>

                <!-- Room List -->
                <TextBlock Text="ROOM LIST" FontSize="18" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <DataGrid x:Name="RoomDataGrid" Margin="0,5,0,10" Height="150" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNo}" Width="*" />
                        <DataGridTextColumn Header="Active" Binding="{Binding RoomStatus}" Width="*" />
                        <DataGridTextColumn Header="Booked" Binding="{Binding Booked}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
