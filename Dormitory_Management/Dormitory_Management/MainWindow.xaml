<Window x:Class="Dormitory_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dormitory Management Program" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <!-- Main Grid: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#34495e" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <TextBlock Text="Dormitory Management" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20"/>
            <Separator Margin="10" Foreground="White"/>

            <Button Content="Manage Rooms" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="ManageRoomsClick"/>
            <Button Content="Add Student" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="AddStudentClick"/>
            <Button Content="Update / Delete Student" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="UpdateDeleteStudentClick"/>
            <Button Content="Room Payment" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="RoomPaymentButton_Click"/>
            <Button Content="All Student Room Statuses" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="ManageStudentStatusClick"/>

            <Separator Margin="10" Foreground="White"/>

            <!-- Logout Button -->
            <Button Content="Logout" Margin="10" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="Logout_Click"/>
        </StackPanel>

        <!-- Main Content -->
        <Frame x:Name="MainFrame" Grid.Column="1" Background="#f4f6f7" Margin="10"/>
    </Grid>
</Window>
