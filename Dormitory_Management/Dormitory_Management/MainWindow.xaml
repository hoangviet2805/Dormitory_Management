<Window x:Class="Dormitory_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chương Trình Quản Lý Ký Túc Xá" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <!-- Cột lưới chính: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#34495e" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <TextBlock Text="Dashboard" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20"/>
            <Separator Margin="10" Foreground="White"/>

            <Button Content="Quản Lý Phòng" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="ManageRoomsClick"/>
            <Button Content="Thêm Sinh Viên" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="AddStudentClick"/>
            <Button Content="Cập Nhật - Xóa Sinh Viên" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="UpdateDeleteStudentClick"/>
            <Button Content="Thanh Toán Phí Phòng" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="ManageFeesClick"/>
            <Button Content="Tất Cả Trạng Thái Sinh Viên" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="ManageStudentStatusClick"/>
            <Button Content="Sinh Viên Trả Phòng" Margin="10" Height="40" Background="#2980b9" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="StudentCheckoutClick"/>

            <Separator Margin="10" Foreground="White"/>

            <!-- Nút Đăng xuất -->
            <Button Content="Đăng xuất" Margin="10" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" BorderThickness="1" Click="Logout_Click"/>
        </StackPanel>

        <!-- Nội dung chính -->
        <Frame x:Name="MainFrame" Grid.Column="1" Background="#f4f6f7" Margin="10"/>
    </Grid>
</Window>
